    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",


    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],

    "strict": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src"]
}
